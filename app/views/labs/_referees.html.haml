.columns.large-4
  %label
    Referees - Select up to 3 referee labs
  .selections
    %ul
      - @lab.referee_approval_processes.each do |c|
        - if c.referee.present?
          %li
            %span
              = link_to icon('times'), referee_approval_process_path(c), method: :delete
              = image_tag hocho(c.referee.avatar, "o=t&q=80&d=90x90"), class: 'avatar tiny'

.columns.large-8
  - @selected = @lab.referee_approval_processes.collect
  = select_tag :referee_approval_processes_attributes, options_for_select(Lab.approved_referees.collect, @selected), { multiple: true, name: 'lab[referee_approval_processes_attributes][][referee_id]', class: 'referee_approval'}
