- title t("views.header.signin", default: "Sign in")
.row
  .columns.large-4.large-centered

    -# .fablabs
    -#   %span fablabs
    -#   %span.io IO

    .row
      .columns.large-12.text-center
        = link_to "https://tcbl.eu" do
          = image_tag "fablabs02.png", id: 'full-logo'
    
    = link_to "Not yet a member? <strong>#{t('views.header.signup', default: 'Sign up')}</strong>".html_safe, "https://tcblsso.ilabt.iminds.be/usermanager/user/register" 

    .row
      &nbsp;
    .row
      = form_tag providers_path do
        = hidden_field_tag :host, "#{Rails.configuration.sso_server}"
        = submit_tag "Login with TCBL"
