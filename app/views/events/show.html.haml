.row
  .columns.large-12
    = render "breadcrumbs", event: @event
    - title @event
    - if @event.local_starts_at
      = @event.local_starts_at.stamp("At 15:00 on Wednesday, 3rd October 2020")
    %p created by #{link_to @event.creator, @event.creator}
    = simple_format @event.description

    - if current_or_null_user.can_update?(@event)
      = link_to "Edit Event", edit_lab_event_path(@event.lab, @event), class: 'button'
