.row
  .columns.large-12
    = title "Lab Events"

    %ul
      - @lab.events.each do |day, events|
        %li
          -# = day.stamp('wednesday, 12th November 2012')
          %ul
            - @lab.events.each do |event|
              %li
                = event.all_day? ? "All Day" : event.starts_at.stamp('15:30')
                = event
                -# = link_to event, event
                \-
                = link_to event.lab, event.lab

    -# only show button when user has permission to edit @lab
    - if current_user and current_user.employed_by? @lab
      = link_to "Add Event", new_lab_event_path, class: 'button'
